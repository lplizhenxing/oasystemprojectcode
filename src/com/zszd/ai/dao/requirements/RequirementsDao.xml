<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zszd.ai.dao.requirements.RequirementsDao">
	<select id="queryAllRequirementInfo" resultType="Requirements">
		select * from requirements order by submitTime desc
	</select>
	<insert id="addRequirementsInfo" parameterType="Requirements">
		insert into requirements (title,content,userName) values
		(#{title},#{content},#{userName})
	</insert>
	<select id="getRequirementsById" resultType="requirements">
		select * from requirements where id=#{id}
	</select>
	<update id="updateRequirementsInfo" parameterType="requirements">
		update requirements set
		title=#{title},content=#{content},state=#{state},resolveDevName=#{resolveDevName}
		where id=#{id}
	</update>
	<select id="queryAllRequirementInfoByCompanyId" resultType="requirements">
		select a.* from requirements a , employee b where a.userName = b.name  and  b.companyId =#{companyId}  order by a.submitTime desc
	</select>
		<select id="queryAllRequirementInfoByCompanyIdAndName" resultType="requirements">
		select a.* from requirements a , employee b where a.userName = b.name  and  b.companyId =#{companyId} 
		and (a.resolveDevName = #{name} or a.userName = #{name}) order by a.submitTime desc
	</select>
	
	

</mapper>