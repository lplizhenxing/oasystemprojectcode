@charset "utf-8";
/*box*/
#box {
	width: 1000px;
	height: 480px;
	position: relative;
	overflow: hidden;
	margin: 60px auto 0;
	right: 0px;
	top: -50px;
}

#pic_list {
	position: relative;
	z-index: 1;
}

#pic_list li {
	position: absolute;
	left: 0;
	top: 10px;
	opacity: 0;
	fliter: alpha(opacity=0);
	z-index: 1;
}

.mark {
	height: 90px;
	width: 660px;
	background: #000;
	position: absolute;
	left: 0;
	bottom: 10px;
	opacity: 0.3;
	filter: alpha(opacity=30);
}

#text_list {
	position: absolute;
	bottom: 60px;
	left: 15px;
	position: absolute;
	z-index: 5;
	height: 25px;
	overflow: hidden;
	top: 265px;
}

#text_list h2 {
	display: none;
}

#text_list .show {
	display: block;
}

#text_list a {
	color: RED;
	font-family: "Microsoft YaHei";
	font-size: 18px;
	font-weight: normal;
	text-decoration: none;
}

#ico_list {
	position: absolute;
	bottom: 10px;
	left: 12px;
	width: 825px;
	overflow: hidden;
	height: 92px;
	z-index: 3;
}


#ico_list ul {
	position: absolute;
	left: 0;
	top: 0px;
}

#ico_list li {
	width: 75px;
	float: left;
}

#ico_list li a {
	width: 68px;
	padding-top: 6px;
	display: block;
}

#ico_list li a img {
	border: 2px solid #DFE8E4;
	height: 80px;
	width: 64px;
	background: #040303;
	opacity: 0.7;
	filter: alpha(opacity=70);
}

#ico_list .active {
	background: url(../../images/img/a_hover.gif) no-repeat center 0;
}

#ico_list .active img {
	opacity: 1;
	filter: alpha(opacity=100);
	border: 3px solid #fff;
	height: 80px;
	width: 62px;
}

.btn {
	background: url(../../images/img/btn.gif) no-repeat;
	height: 48px;
	width: 48px;
	position: absolute;
	bottom: 10px;
	opacity: 0.5;
	filter: alpha(opacity=50);
	cursor: default;
	z-index: 3;
}

.showBtn {
	opacity: 1;
	filter: alpha(opacity=100);
	cursor: pointer;
	z-index: 4;
}

#btn_prev {
	right: 56px;
}

#btn_next {
	right: 20px;
	background-position: right 0;
}