<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ include file="../common/userlogin.jsp"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<base href="<%=basePath%>">
<title>文件显示页面</title>
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<link rel="stylesheet" type="text/css" href="static/css/userindex.css">
</head>
<body>
	<%@ include file="../common/userheader.jsp"%>
	<section id="section"> <%@ include
		file="../common/userleft.jsp"%>
	<div id="right">
		<br />
		<h3>文件显示页面</h3>
		<table>
			<c:if test="${requestScope.list!=null}">
				<tr>
					<th>文件名称</th>
					<th>文件路径</th>
					<th>文件创建时间</th>
					<th>文件创建者</th>
					<c:if test="${sessionScope.roleId != 6}">
					    <th>文件类型</th>
						<th>文件状态</th>
						<th>操作权限</th>
					</c:if>			
				</tr>
				<c:forEach items="${requestScope.list}" var="file">
					<tr>
						<td colspan="4"><hr /></td>
					<tr>
					<tr>
						<td>${file.name}</td>
						<td>
						  <a href="${file.path}">${file.name}</a>
						</td>
						<td>${file.createTime}</td>
						<td>${file.createBy}</td>
						<c:if test="${sessionScope.roleId != 6}">
						    <td>${file.showType}</td>
							<td>${file.stateName}</td>
							<td><a href="resource?opr=modify&id=${file.id}&type=${file.type}">审核</a></td>
						</c:if>
					</tr>
				</c:forEach>
			</c:if>
		</table>
	</div>
	</section>
	<%@ include file="../common/footer.jsp"%>
</body>
</html>
