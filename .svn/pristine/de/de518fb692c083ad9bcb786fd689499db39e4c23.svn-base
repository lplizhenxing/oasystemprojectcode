<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%
	String path = request.getContextPath();
	String basePath = request.getScheme() + "://"
	+ request.getServerName() + ":" + request.getServerPort()
	+ path + "/";
%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<base href="<%=basePath%>">
<title>浙江宙斯之盾OA系统</title>
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<link rel="stylesheet" type="text/css" href="static/css/loginnew.css">
</head>
<body>
	<%
		//获取cookie信息 用户名和密码
			String user = "";
			String pwd = "";
			Cookie[] cookies = request.getCookies();
			if (cookies != null) {
		for (Cookie cookie : cookies) {
			if (cookie.getName().equals("name")) {
				user = cookie.getValue();
			} else if (cookie.getName().equals("password")) {
				pwd = cookie.getValue();
			}
		}
		if (user != "" && pwd != "") {
			response.sendRedirect(basePath
					+ "dologin?opr=mianloginnew&username=" + user
					+ "&password=" + pwd);
		}
			}
	%>
	<%
		Integer count = (Integer) application.getAttribute("count");
			if (count != null) {
		count++;
			} else {
		count = 1;
			}
			application.setAttribute("count", count);
	%>
	<div class="logo_box">
		<h3>宙斯之盾OA系统欢迎你</h3>
		<form action="<%=basePath%>dologin?opr=loginnew" name="f" method="post">
			<div class="input_outer">
				<span class="u_user"></span>
				<input name="logname" class="text" onFocus=" if(this.value=='输入用户名登录') this.value=''" onBlur="if(this.value=='') this.value='输入用户名登录'" value="输入用户名登录" style="color: #FFFFFF !important" type="text">
			</div>
			<div class="input_outer">
				<span class="us_uer"></span>
				<input name="logpass" class="text" style="color: #FFFFFF !important; position:absolute; z-index:100;"   type="password">
			</div>
			<div>
			    <span>十分钟免登录：</span>
			    <input type="checkbox" name="nologin" id="nologin" /> 
			</div>
			<div class="mb2">
			     <input type="submit" class="act-but submit" style="color: #FFFFFF" value="登录"/> 			         
			</div>
		</form>
		<div class="sas">
		    <p style="color:yellow">
		         ${empty requestScope.message?"":"验证信息:"}${requestScope.message}
		    </p>
		    <br />
		    <p>	
				网站访问量：目前有<span style="color:red"><%=count%></span>个人访问过 
			</p>
			<br/>
			<p>
			  ZSZD办公系统
			  <a href="http://192.168.5.88/zszd" style="color: red;">&copy; www.zszd.com</a>版权所有			    
			</p>
		</div>
     </div>		
</body>
</html>
