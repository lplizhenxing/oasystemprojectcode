#right input {
	font-weight: bolder;
	font-size: 16px;
	color: blue;
}

#commentContent {
	font-weight: bolder;
	font-size: 16px;
	color: red;
}

#postContent {
	width: 500px;
}

#footer {
	color: black;
}

#footer p {
	font-size: 16px;
	padding-left: 10px;
}

#footer p a {
	font-weight: bolder;
	color: red;
	padding-left: 12px;
	text-decoration: none;
}