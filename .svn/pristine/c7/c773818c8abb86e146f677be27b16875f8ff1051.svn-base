#right tr {
	line-height: 100px;
}

#right a {
	text-decoration: none;
	font-size: 18px;
	color: black;
	font-weight: bolder;
}

#right a:hover {
	text-decoration: underline;
	font-size: 20px;
	color: black;
}

#right  ol span {
	font-size: 10px;
	color: black;
}

#right p {
	width: 900px;
}

#right p img {
	width: 800px;
}

/*gongxg
