<%@ page language="java" import="java.util.*" pageEncoding="UTF-8"%>
<%@ include file="../common/userlogin.jsp"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
<base href="<%=basePath%>">
<title>公司修改页面</title>
<meta http-equiv="pragma" content="no-cache">
<meta http-equiv="cache-control" content="no-cache">
<meta http-equiv="expires" content="0">
<meta http-equiv="keywords" content="keyword1,keyword2,keyword3">
<meta http-equiv="description" content="This is my page">
<link rel="stylesheet" type="text/css" href="static/css/userindex.css">
<script class="resources library"
	src="http://sandbox.runjs.cn/uploads/rs/267/g3ugugjp/area.js"
	type="text/javascript"></script>
</head>
<body>
	<%@ include file="../common/userheader.jsp"%>
	<section id="section"> <%@ include
		file="../common/userleft.jsp"%>
	<div id="right">
		<br />
		<h1>修改公司信息</h1>
		<form action="company?opr=submitModify" method="post">
			<table>
				<tr>
					<td style="width:500px;"><input type="hidden"
						value="${requestScope.company.id}" name="companyId">
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改公司名称：<input type="text"
						value="${requestScope.company.name}" name="companyName" required>
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改公司网站：<input type="text" id="url"
						value="${requestScope.company.url}" name="companyUrl"><font id="urlText"></font>
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改公司电话：<input type="text" id="tel"
						value="${requestScope.company.telephone}" name="companyTel"><font id="telText"></font>
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改公司传真：<input type="text" id="fax"
						value="${requestScope.company.fax}" name="companyFax"><font id="faxText"></font>
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改公司地址：<select id="s_province"
						name="s_province"></select> <select id="s_city" name="s_city"></select>
						<select id="s_county" name="s_county"></select><input
						style="margin:2px 0 0 112.3px;" name="detail">
					</td>
				</tr>
				<tr>
					<td style="width:500px;">修改所属班级：<select name="classId"
						id="classId"></select>
					</td>
				</tr>
				<tr>
					<td><input type="submit" value="提交修改 "><input type="reset" value="重置">
					</td>
				</tr>
			</table>
		</form>
	</div>
	</section>
	<%@ include file="../common/footer.jsp"%>
</body>
</html>
<script type="text/javascript">
	$(function() {
		_init_area();
		var classes = "opr=query&level=company";
		$.get("classes", classes, function callabck(data) {
			var jsonObj = eval("(" + data + ")");
			var optionStr = "";
			for ( var item in jsonObj) {
				optionStr += "<option value=\""+item+"\">" + jsonObj[item]
						+ "<option>";
			}
			$("#classId").html(optionStr);
		});
		$("#tel").blur(checkTel);
		$("#fax").blur(checkFax);
		$("#url").blur(checkUrl);
		$("#submit").submit(function() {
			var flag = true;
			if (checkTel())
				flag = false;
			if (!checkFax())
				flag = false;
			if (!checkUrl())
				flag = false;
				return flag;
		});
		function checkTel() {
			var mobile = $("#tel").val();
			var reg = /^((0\d{2,3}-\d{7,8})|(1[3584]\d{9}))$/;
			if (!reg.test(mobile)) {
				$("#telText").html("*电话号码不正确！");
				return false;
			}
			$("#telText").html("*");
			return true;
		}
		function checkFax() {
			var mobile = $("#fax").val();
			var reg = /^((0\d{2,3}-\d{7,8})|(1[3584]\d{9}))$/;
			if (!reg.test(mobile)) {
				$("#faxText").html("*传真号码不正确！");
				return false;
			}
			$("#faxText").html("*");
			return true;
		}
		function checkUrl() {
			var mobile = $("#url").val();
			var reg = /^(((ht|f)tp(s?))\:\/\/)?(www.|[a-zA-Z].)[a-zA-Z0-9\-\.]+\.(com|edu|gov|mil|net|org|biz|info|name|museum|us|ca|uk)$/;
			if (!reg.test(mobile)) {
				$("#urlText").html("*网址不正确！");
				return false;
			}
			$("#urlText").html("*");
			return true;
		}
	});
</script>